  <div id="delete-from-trip" class="small-3 small-left columns"><%= link_to "Delete from Trip", @activity, method: :delete, data: {confirm: "Are you sure?"} %></div>

  <% @trips.each do |trip| %>
    <% if trip.current %>
      <h6 class="small-3 small-centered columns"><%= trip.trip_name %></h6>
      <h6 class="row small-6 small-centered columns"><% trip.activities.each do |activity| %>
        <a href="/activities/<%= activity['id'] %>"><%= activity['name'] %>     -----</a>
        <% end %></h6>
      <% end %>
  <% end %>

<div id="activity" class="row small-6 small-centered columns">
  <div id="activity-name"><h2><%= @activity.name %></h2></div>
  <div id="activity-address"><h6><%= @activity.address %></h6></div>
  <div id="activity-description"><h5><%= @activity.description %></h5></div>
</div>





<div class="row small-3 small-centered columns" id="button" data-id="<%= @activity.id %>">
  <%= button_to "Next Stop", zone_path(@activity.zone_id), method: :get %>
</div>


</div>
