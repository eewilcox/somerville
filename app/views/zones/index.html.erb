
<div id="background-img">
<h1 class="small-11 small-centered columns">Somerville</h1>

<%= form_for(@zone, method: :get) do |f| %>
  <div class="field small-11 small-centered columns">
    <%= f.collection_select(:name, Zone.all, :id, :name, prompt: true) %>
  </div>

  <div id="go" class="actions small-11 small-centered columns" >
    <%= f.submit "Go!"%>
  </div>
<% end %>

  <div class="charts">
    <% if @happy %>
      <%= line_chart [
      {name: "Happiness 2015", data: @happy},
      {name: "Happiness 2013", data: @happy2},

      {name: "Community Events 2015", data: @community},
      {name: "Community Events 2013", data: @community2},

      {name: "Affordability 2015", data: @cost},
      {name: "Affordability 2013", data: @cost2},

    ], colors: ["#A7C5BD", "#eb7b59", "#CF4647", "#524656" ] %>
    <% end %>
  </div>
</div>
