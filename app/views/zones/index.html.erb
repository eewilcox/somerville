
<div id="background-img">
  <div class="overlay">
    <div id="home" class="small-12 medium-7 small-centered columns">
      <h1 class="small-11 small-centered columns">
        Somerville
      </h1>

      <%= form_for(@zone, method: :get) do |f| %>
        <div class="field small-11 small-centered columns">
          <%= f.collection_select(:name, Zone.all, :id, :name, prompt: true) %>
        </div>

        <div id="tag">
          <p>
            Explore Somerville!
          </p>
          <p>
            Pick a neighborhood to begin, or sign up to be able to save your journey and access additional information.
          </p>
        </div>

        <div id="go" class="actions small-11 small-centered columns" >
          <%= f.submit "Go!"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
