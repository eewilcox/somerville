<h1>Add Activities</h1>
  <div class = "row">
  <%= form_for(@activity) do |f| %>
  <div class="large-6 columns">
    <div class="field">
      <%= f.label :name %><br/>
      <%= f.text_field :name %>
    </div>

   <div class="field">
      <%= f.label :address %><br/>
      <%= f.text_field :address %>
    </div>

   <div class="field">
      <%= f.label :description %><br/>
      <%= f.text_field :description %>
    </div>
  </div>
  <div class="large-6 columns">
    <div class="field">
      <%= f.label :picture %><br/>
      <%= f.text_field :picture %>
    </div>

    <div class="field">
      <%= f.label :reference %><br/>
      <%= f.text_field :reference %>
    </div>

    <div class="field">
      <%= f.label :zone_id %><br/>
      <%= f.text_field :zone_id %>
    </div>
  </div>

 <div class="actions">
    <%= f.submit "Add Activity"%>
 </div>
<% end %>
</div>

<div>
  <% @options["results"].each do |option| %>
    <p>{name: "<%= option['name'] %>",</p>
    <p>reference: "<%= option['place_id'] %>",</p>

    <% if option['formatted_address'] %>
      <p>address: "<%= option['formatted_address'] %>",</p>
    <% end %>

    <% if option['photos'] %>
      <p>picture: "<%= option['photos'][0]['photo_reference'] %>",</p>
    <% end %>
      <p>zone_id: 3},</p>
  <% end %>
</div>
